use Array: all;
use SDLdisplay: all;
use StdIO: all;

int main() {
    printf("initDisplay\n");
    ctx = initDisplay(640, 480);

    printf("drawPixel\n");
    pixels = reshape([640,480,3], iota(640*480*3) % 256);
    ctx = drawScreen(ctx, pixels);

    printf("closeDisplay\n");
    closeDisplay(ctx);
    printf("Done\n");
    return 0;
}
